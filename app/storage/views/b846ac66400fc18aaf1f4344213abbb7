
<a href="#" class="dropdown-toggle jobs" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
    <i class="entypo-list"></i>


    <?php if($dropdownData['data']['totalNonVisitedJobs'][0]->totalNonVisitedJobs > 0): ?><span class="badge badge-warning"><?php echo $dropdownData['data']['totalNonVisitedJobs'][0]->totalNonVisitedJobs;; ?></span><?php endif; ?>
</a>

<ul class="dropdown-menu">
    <li class="top">
        <p>You have <?php echo $dropdownData['data']['totalPendingJobs'][0]->totalPendingJobs; ?> pending jobs</p>
    </li>
    <li>
        <ul class="dropdown-menu-list scroller">
            <?php if(count($dropdownData['data']['jobs'])>0): ?>
            <?php foreach($dropdownData['data']['jobs'] as $job): ?>

            <?php
            $j_class ="";
            $class_striped ="";
            if($job->Status == 'Success')        { $j_class=  'progress-bar-success'; }
            if($job->Status == 'Failed')       { $j_class=  'progress-bar-danger'; }
            if($job->Status == 'In Progress')   { $j_class=  'progress-bar-warning'; }
            if($job->Status == 'Completed')     { $j_class=  'progress-bar-info'; }
            if($job->Status == 'Pending')       { $j_class=  'progress-bar-important'; }
            if($job->Status == 'Partially Failed')       { $j_class=  'progress-bar-danger';$class_striped =  'progress-striped'; }

            $HasReadClass="";
            if($job->HasRead == 0){
                $HasReadClass = "bold";
            }

            ?>

            <li>
                <a href="Javascript:;" onclick="return showJobAjaxModal('<?php echo $job->JobID; ?>');">
                                            <span class="task <?php echo $HasReadClass;?>">
                                                <span class="desc"><?php echo $job->Title; ?></span>
                                                <span class="percent"><?php echo $job->Status; ?></span>
                                            </span>

                                            <span class="progress <?php echo $class_striped; ?>">
                                                <span style="width: 100%;" class="progress-bar <?php echo $j_class; ?>">
                                                    <span class="sr-only"><?php echo $job->Status; ?></span>
                                                </span>
                                            </span>
                                            <span class="task <?php echo $HasReadClass;?>">
                                                     <span class="desc">By <?php echo $job->CreatedBy; ?></span>
                                                     <span class="percent"><?php echo \Carbon\Carbon::createFromTimeStamp(strtotime($job->created_at))->diffForHumans(); ?></span>

                                             </span>
                </a>
            </li>
            <?php endforeach; ?>
            <?php endif; ?>


        </ul>
    </li>
    <li class="external">
        <a href="<?php echo URL::to('/jobs'); ?>">See all jobs</a>
    </li>
</ul>