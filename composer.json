{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.0.*",
		"indatus/dispatcher": "1.*",
        "aws/aws-sdk-php": "2.*",
        "webpatser/laravel-uuid": "1.*",
		"maatwebsite/excel": "~2.0.0",
		"curl/curl": "1.*",
		"phpmailer/phpmailer": "~5.2",
        "laravelcollective/remote": "~5.0",
        "Chumper/Zipper": "1.0.x",
        "symfony/intl": "^2.7",
        "authorizenet/authorizenet": "~1.8",
        "nesbot/Carbon": "*",
		"box/spout": "^2.4",
		"consolibyte/quickbooks": "^3.1",
		"cartalyst/stripe-laravel": "2.0.*",
		"calcinai/xero-php": "^1.6",
		"phpoffice/phpexcel": "^1.8",
		"webklex/laravel-imap":"1.0.5.8",
		"nicolab/php-ftp-client": "^1.4"

    },
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"


    },
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		},
        "files": [
            "app/helpers.php"
        ]

	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php",
            "app/lib"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
